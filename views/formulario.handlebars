<form action="">
  <h1 class="ms-5 mt-5">Cadastrar Postagem</h1>  
  <div class="ms-5 me-5 mb-4 mt-3">
    <label for="titulo" class="form-label">Título:</label>
    <input type="text" class="form-control" id="titulo" placeholder="Digite o título" name="titulo">
  </div>
  <div class="ms-5 me-5 mb-3">
    <label for="conteudo">Conteúdo:</label>
    <textarea class="form-control" rows="5" id="conteudo" name="text"></textarea>
  </div>
  <button type="submit" class="btn btn-primary ms-5 mb-5">Cadastrar</button>
</form>